<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherExercice">
    <children>
        <ScrollPane layoutY="7.0" AnchorPane.bottomAnchor="-7.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="7.0">
            <VBox fx:id="exerciceContainer" prefHeight="135.0" prefWidth="798.0" spacing="10.0">
                <!-- Ajout des champs de recherche -->
                <AnchorPane>

                    <TextField fx:id="nomExerciceField" layoutX="23.0" layoutY="30.0" prefHeight="34.0" prefWidth="114.0" text="Nom.. " />
                    <TextField fx:id="niveauExerciceField" layoutX="319.0" layoutY="33.0" prefHeight="26.0" prefWidth="121.0" text="Niveau.." />
                    <TextField fx:id="descriptionExerciceField" layoutX="145.0" layoutY="31.0" prefHeight="31.0" prefWidth="161.0" text="Description.." />
                    <Button fx:id="rechercheButton" layoutX="344.0" layoutY="73.0" mnemonicParsing="false" onAction="#rechercherExercices" text="Rechercher" textFill="#fffafa" />

                    <Button fx:id="imprimer" layoutX="627.0" layoutY="4.0" mnemonicParsing="false" onAction="#boutonimrimer" prefHeight="36.0" prefWidth="165.0" text="Imprimer  PDF" textFill="#a6076b">
                        <font>
                            <Font name="Constantia Italic" size="18.0" />
                        </font>
                    </Button>

                </AnchorPane>
                <Label prefHeight="30.0" prefWidth="232.0" text="Liste des exercices">
               <font>
                  <Font name="Century Schoolbook" size="24.0" />
               </font></Label>
                <FlowPane hgap="10.0" prefWidth="700.0" vgap="10.0">
                    <!-- Placeholder pour les cartes d'exercices -->
                    <!-- Les cartes d'exercices seront ajoutées dynamiquement depuis le contrôleur -->
                </FlowPane>

            </VBox>
        </ScrollPane>
    </children>

</AnchorPane>
