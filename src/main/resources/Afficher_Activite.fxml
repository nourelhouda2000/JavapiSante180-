<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherActivite">

    <FlowPane VBox.vgrow="ALWAYS" prefHeight="500.0">
        <ScrollPane fitToWidth="true" HBox.hgrow="ALWAYS">
            <VBox fx:id="activiteContainer" prefHeight="500.0" prefWidth="790.0" spacing="10.0">
                <Label prefHeight="52.0" prefWidth="218.0" text="Liste Des Activités">
                    <font>
                        <Font name="Constantia Italic" size="24.0" />
                    </font>
                </Label>

                <FlowPane hgap="10.0" vgap="10.0">
                    <!-- Placeholder pour les lignes de cartes d'activités -->
                    <!-- Les cartes d'activités seront ajoutées dynamiquement depuis le contrôleur -->
                </FlowPane>
            </VBox>
        </ScrollPane>
    </FlowPane>

    <!-- Partie pour les statistiques (en bas) -->
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" prefHeight="100.0" style="-fx-background-color: #f4f4f4;" spacing="10.0">
        <Label >
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="10.0">
            <Pane HBox.hgrow="ALWAYS" />
            <BarChart fx:id="activiteBarChart" prefHeight="80.0" prefWidth="600.0">
                <xAxis>
                    <CategoryAxis side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" />
                </yAxis>
            </BarChart>
            <Pane HBox.hgrow="ALWAYS" />
        </HBox>

        <Button text="Voir les Statistiques" onAction="#handleActiviteStatsButtonAction" style="-fx-background-color: #AD1457; -fx-text-fill: white;" />
    </VBox>

</AnchorPane>