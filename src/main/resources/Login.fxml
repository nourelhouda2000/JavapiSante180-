<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginControllers">
   <children>
      <AnchorPane fx:id="Login_form" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="right-form" stylesheets="@Loginn.css">
               <children>
                  <ImageView fitHeight="303.0" fitWidth="300.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@slider-img.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="300.0" prefHeight="400.0" prefWidth="300.0" styleClass="right-form" stylesheets="@Loginn.css">
               <children>
                  <Label layoutX="70.0" layoutY="121.0" stylesheets="@Loginn.css" text="Welcome Back !" textFill="#73aa18">
                     <font>
                        <Font name="Tahoma Bold" size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="email_btn" layoutX="40.0" layoutY="163.0" prefHeight="30.0" prefWidth="220.0" promptText="Email" styleClass="textfield" stylesheets="@Loginn.css" />
                  <PasswordField fx:id="password_btn" layoutX="40.0" layoutY="200.0" prefHeight="30.0" prefWidth="220.0" promptText="Password" styleClass="textfield" stylesheets="@Loginn.css" />
                  <Button fx:id="login_btn" layoutX="40.0" layoutY="265.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="220.0" styleClass="update-btn" stylesheets="@java.css" text="Login" />

                        <Button fx:id="close" layoutX="241.0" layoutY="14.0" mnemonicParsing="false" onAction="#close" prefHeight="24.0" prefWidth="70.0" styleClass="close" stylesheets="@Loginn.css" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
                     <graphic>
                        <FontAwesomeIconView glyphName="CLOSE" selectionEnd="0" size="1.2em" />
                     </graphic>
                  </Button>
                  <Hyperlink fx:id="linkpwd" layoutX="156.0" layoutY="230.0" onAction="#handleResetPassword" text="Forget password ?" />
                  <Hyperlink fx:id="signup" layoutX="162.0" layoutY="363.0" onAction="#handleSignUp" text="Sign up" />
                  <Label layoutX="82.0" layoutY="366.0" text="Create account" />
                  <ImageView fitHeight="70.0" fitWidth="105.0" layoutX="109.0" layoutY="42.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@user-interface%20.png" />
                     </image>
                  </ImageView>
                  <CheckBox fx:id="checkbox_pwd" layoutX="267.0" layoutY="206.0" mnemonicParsing="false" onAction="#showPasswordCheckbox" prefHeight="18.0" prefWidth="18.0" />
                  <TextField fx:id="login_showpwd" layoutX="40.0" layoutY="200.0" prefHeight="30.0" prefWidth="220.0" promptText="Password" styleClass="textfield" stylesheets="@Loginn.css" />
                  <FontAwesomeIconView fx:id="facebook" glyphName="FACEBOOK" layoutX="135.0" layoutY="351.0" onDragDetected="#handleFacebookLogin" size="15" />
                  <FontAwesomeIconView fx:id="instagram" glyphName="INSTAGRAM" layoutX="150.0" layoutY="351.0" onDragDetected="#handleInstagramLogin" size="15" />
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
